        <!--  NavigationMenuItemTemplate  -->
        <DataTemplate x:Key="ProgramListDataTemplate" x:DataType="vm:ProgramListItem">
            <NavigationViewItem
                DataContext="{x:Bind}"
                PointerPressed="NavigationViewItem_PointerPressed"
                PointerReleased="NavigationViewItem_PointerReleased">

                <NavigationViewItem.Resources>
                    <x:Double x:Key="NavigationViewItemOnLeftIconBoxHeight">48</x:Double>
                    <Thickness x:Key="NavigationViewItemOnLeftIconBoxMargin">8,0</Thickness>
                    <Thickness x:Key="NavigationViewItemContentPresenterMargin">4,0</Thickness>
                </NavigationViewItem.Resources>

                <NavigationViewItem.Icon>
                    <ImageIcon Source="{x:Bind Icon}" />
                </NavigationViewItem.Icon>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" ToolTipService.ToolTip="{x:Bind Path}">
                        <TextBlock Text="{x:Bind Name}" TextWrapping="NoWrap" />
                        <TextBlock
                            Opacity="0.5"
                            Text="{x:Bind Path}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap" />
                    </StackPanel>

                    <ToggleSwitch
                        Grid.Column="1"
                        MinWidth="0"
                        Margin="0,0,-16,0"
                        DataContext="{x:Bind}"
                        IsOn="{x:Bind Enabled, Mode=TwoWay}"
                        OffContent="{x:Null}"
                        OnContent="{x:Null}"
                        PointerPressed="ToggleSwitch_PointerPressed"
                        PointerReleased="ToggleSwitch_PointerReleased"
                        Toggled="ToggleSwitch_Toggled" />
                </Grid>

                <NavigationViewItem.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutSubItem Foreground="Red" Text="移除">
                            <MenuFlyoutSubItem.Icon>
                                <SymbolIcon Foreground="Red" Symbol="Delete" />
                            </MenuFlyoutSubItem.Icon>

                            <MenuFlyoutItem IsEnabled="False" Text="放弃对它的配置，然后移除。不会从电脑上删除。">
                                <MenuFlyoutItem.Icon>
                                    <!--  Info  -->
                                    <FontIcon Glyph="&#xE946;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem
                                Click="RemoveProgram"
                                DataContext="{x:Bind}"
                                Foreground="Red"
                                Text="确定移除">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Delete" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>

                        <MenuFlyoutItem
                            Click="ConfigInNewTab"
                            DataContext="{x:Bind}"
                            Text="在新标签页中配置">
                            <MenuFlyoutItem.Icon>
                                <!--  OpenInNewWindow  -->
                                <FontIcon Glyph="&#xE8A7;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem
                            Click="GoToProgramPath"
                            DataContext="{x:Bind}"
                            Text="打开程序所在位置">
                            <MenuFlyoutItem.Icon>
                                <!--  FileExplorer  -->
                                <FontIcon Glyph="&#xEC50;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem
                            Click="CopyProgramPath"
                            DataContext="{x:Bind}"
                            Text="复制程序所在路径">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Copy" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </NavigationViewItem.ContextFlyout>
            </NavigationViewItem>
        </DataTemplate>

