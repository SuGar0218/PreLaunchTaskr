                    </MenuBarItem.KeyboardAccelerators>

                    <MenuFlyoutItem Click="{x:Bind SelectProgramFromFile}" Text="从文件管理器选取">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xEC50;" />
