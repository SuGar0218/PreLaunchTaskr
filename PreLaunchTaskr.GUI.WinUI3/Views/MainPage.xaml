<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PreLaunchTaskr.GUI.WinUI3.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:PreLaunchTaskr.GUI.WinUI3.Helpers"
    xmlns:local="using:PreLaunchTaskr.GUI.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:PreLaunchTaskr.GUI.WinUI3.Controls"
    xmlns:vm="using:PreLaunchTaskr.GUI.WinUI3.ViewModels.ItemModels"
    Loaded="Page_Loaded"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.Resources>
        <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="LayerOnMicaBaseAltFillColorDefaultBrush" />
        <!--<StaticResource x:Key="NavigationViewContentBackground" ResourceKey="NavigationViewExpandedPaneBackground" />-->
        <!--<x:Double x:Key="NavigationViewIconBoxWidth">64</x:Double>-->
        <!--<x:Double x:Key="NavigationViewItemOnLeftIconBoxWidth">64</x:Double>-->
        <!--<SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />-->
        <!--<SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />-->
        <!--<CornerRadius x:Key="NavigationViewContentGridCornerRadius">0</CornerRadius>-->
        <x:Double x:Key="AppBarThemeMinHeight">0</x:Double>

        <!--  NavigationMenuItemTemplate  -->
        <DataTemplate x:Key="ProgramListDataTemplate" x:DataType="vm:ProgramListItem">
            <NavigationViewItem>
                <NavigationViewItem.Resources>
                    <x:Double x:Key="NavigationViewItemOnLeftIconBoxHeight">48</x:Double>
                    <Thickness x:Key="NavigationViewItemOnLeftIconBoxMargin">8,0</Thickness>
                    <Thickness x:Key="NavigationViewItemContentPresenterMargin">4,0</Thickness>
                </NavigationViewItem.Resources>

                <NavigationViewItem.Icon>
                    <ImageIcon Source="{x:Bind Icon}" />
                </NavigationViewItem.Icon>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" ToolTipService.ToolTip="{x:Bind Path}">
                        <TextBlock Text="{x:Bind Name}" TextWrapping="NoWrap" />
                        <TextBlock
                            Opacity="0.5"
                            Text="{x:Bind Path}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap" />
                    </StackPanel>

                    <ToggleSwitch
                        Grid.Column="1"
                        MinWidth="0"
                        Margin="0,0,-16,0"
                        DataContext="{x:Bind}"
                        IsOn="{x:Bind Enabled, Mode=TwoWay}"
                        OffContent="{x:Null}"
                        OnContent="{x:Null}" />
                </Grid>

                <NavigationViewItem.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutSubItem Foreground="Red" Text="移除">
                            <MenuFlyoutSubItem.Icon>
                                <SymbolIcon Foreground="Red" Symbol="Clear" />
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem
                                Click="RemoveProgram"
                                DataContext="{x:Bind}"
                                Foreground="Red"
                                Text="确定移除">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Delete" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>

                        <MenuFlyoutItem
                            Click="ConfigInNewTab"
                            DataContext="{x:Bind}"
                            Text="在新标签页中配置">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Go" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem
                            Click="GoToProgramPath"
                            DataContext="{x:Bind}"
                            Text="打开程序所在位置">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Go" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem
                            Click="CopyProgramPath"
                            DataContext="{x:Bind}"
                            Text="复制程序所在路径">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Copy" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </NavigationViewItem.ContextFlyout>
            </NavigationViewItem>
        </DataTemplate>

        <MenuFlyout x:Key="AddProgramMenu" x:Name="AddProgramMenu">
            <MenuFlyoutItem Click="{x:Bind SelectProgramFromFile}" Text="从文件管理器选取">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="OpenFile" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>

            <MenuFlyoutItem Click="{x:Bind SelectInstalledProgram}" Text="从已安装的应用程序中选取">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="List" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>

            <MenuFlyoutItem Click="{x:Bind InputProgramPath}" Text="输入或粘贴路径">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Paste" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>

            <MenuFlyoutItem Click="{x:Bind ShowDragToAddGuide}" Text="把文件拖拽进来">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="TouchPointer" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>

        <MenuFlyout x:Key="MoreOptionsMenu" x:Name="MoreOptionsMenu">
            <MenuFlyoutItem Text="设置">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Setting" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>

            <MenuFlyoutItem Text="关于本程序">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Emoji2" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--<Border
            x:Name="TitleBarBorder"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            x:FieldModifier="private">

            <my:MyStackPanel ContentVerticalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="TitleBarToggleButton"
                    Height="{ThemeResource PaneToggleButtonHeight}"
                    x:FieldModifier="private"
                    Click="{x:Bind ToggleNavigationMenuPane}"
                    Style="{ThemeResource TitleBarPaneToggleButtonStyle}"
                    UseSystemFocusVisuals="False" />

                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="PreLaunchTaskr" />
            </my:MyStackPanel>
        </Border>-->
        <my:MyStackPanel
            Grid.Row="0"
            ContentVerticalAlignment="Center"
            Orientation="Horizontal">

            <Button
                x:Name="TitleBarToggleButton"
                Height="{ThemeResource TitleBarCompactHeight}"
                x:FieldModifier="private"
                Click="{x:Bind ToggleNavigationMenuPane}"
                Style="{ThemeResource TitleBarPaneToggleButtonStyle}" />

            <MenuBar>
                <MenuBarItem Title="添加程序">
                    <MenuFlyoutItem Click="{x:Bind SelectProgramFromFile}" Text="从文件管理器选取">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="OpenFile" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem Click="{x:Bind SelectInstalledProgram}" Text="从已安装的应用程序中选取">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="List" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem Click="{x:Bind InputProgramPath}" Text="输入或粘贴路径">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Paste" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem Click="{x:Bind ShowDragToAddGuide}" Text="把文件拖拽进来">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="TouchPointer" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <!--<MenuBarItem Title="移除程序">
                    <MenuFlyoutItem Text="在列表中右键">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="List" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuBarItem>-->

                <MenuBarItem Title="其他…">
                    <MenuFlyoutItem Click="{x:Bind ShowAboutProgramPage}" Text="关于本程序">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Emoji2" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <!--<MenuFlyoutItem Text="设置">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Setting" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>-->

                    <MenuFlyoutItem Click="{x:Bind LoadAsync}" Text="重新加载">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Refresh" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuBarItem>
            </MenuBar>
        </my:MyStackPanel>

        <!--
            AllowDrop
            指定区域不能具有 null 背景，它必须能够接收指针输入。
            通常，UI 元素默认具有 null 背景。
            设置 Background="Transparent"
        -->
        <NavigationView
            x:Name="Navigation"
            Grid.Row="1"
            AllowDrop="True"
            Background="Transparent"
            DragOver="Navigation_DragOver"
            Drop="AddProgramFromDrop"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            MenuItemTemplate="{StaticResource ProgramListDataTemplate}"
            MenuItemsSource="{x:Bind viewModel.Programs}"
            SelectionChanged="Navigation_SelectionChanged">

            <NavigationView.PaneCustomContent>
                <ProgressBar
                    x:Name="ProgramListProgressBar"
                    x:FieldModifier="private"
                    IsIndeterminate="True"
                    Visibility="Collapsed" />
            </NavigationView.PaneCustomContent>

            <!--<NavigationView.PaneFooter>
                <my:MyStackPanel HorizontalAlignment="Stretch" ContentHorizontalAlignment="Stretch">
                    <NavigationViewItem
                        Content="添加程序"
                        Icon="Add"
                        PointerReleased="{x:Bind ShowAddProgramMenu}" />

                    <NavigationViewItem
                        Content="更多"
                        Icon="More"
                        PointerReleased="{x:Bind ShowMoreOptionsMenu}" />
                </my:MyStackPanel>
            </NavigationView.PaneFooter>-->

            <Frame
                x:Name="ContentFrame"
                x:FieldModifier="private"
                IsNavigationStackEnabled="False" />
        </NavigationView>
    </Grid>
</Page>
