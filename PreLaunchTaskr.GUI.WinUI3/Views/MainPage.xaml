                    </MenuFlyoutItem>

                    <MenuFlyoutItem Click="{x:Bind SelectInstalledProgram}" Text="从已安装的应用程序中选取">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE71D;" />
