<?xml version="1.0" encoding="utf-8" ?>
<!--  WinUI3  -->
<Page
    x:Class="PreLaunchTaskr.GUI.WinUI3.Views.AttachArgumentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:PreLaunchTaskr.GUI.WinUI3.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PreLaunchTaskr.GUI.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:PreLaunchTaskr.GUI.WinUI3.Controls"
    xmlns:vm="using:PreLaunchTaskr.GUI.WinUI3.ViewModels.ItemModels"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ArgumentListItemDataTemplate" x:DataType="vm:AttachedArgumentListItem">
            <Border Padding="16" Style="{StaticResource CardBorderStyle}">
                <Border.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="CopyArgument"
                            DataContext="{x:Bind}"
                            Text="复制参数文本">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Copy" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSubItem Foreground="Red" Text="删除">
                            <MenuFlyoutSubItem.Icon>
                                <SymbolIcon Symbol="Delete" />
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem
                                Click="DeleteArgument"
                                DataContext="{x:Bind}"
                                Foreground="Red"
                                Text="确认删除">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Delete" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                    </MenuFlyout>
                </Border.ContextFlyout>

                <Grid ColumnSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        Grid.Column="0"
                        IsChecked="{x:Bind Enabled, Mode=TwoWay}"
                        Style="{StaticResource SingleChechBoxStyle}" />

                    <TextBox
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        DataContext="{x:Bind}"
                        PlaceholderText="附加参数"
                        Text="{x:Bind Argument, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Background="Transparent" BorderThickness="0">
                            <SymbolIcon Symbol="More" />
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        Click="CopyArgument"
                                        DataContext="{x:Bind}"
                                        Text="复制参数文本" />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>

                        <Button Background="Transparent" BorderThickness="0">
                            <SymbolIcon Symbol="Delete" />
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        Click="DeleteArgument"
                                        DataContext="{x:Bind}"
                                        Foreground="Red"
                                        Text="确认删除">
                                        <MenuFlyoutItem.Icon>
                                            <SymbolIcon Symbol="Delete" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <Flyout x:Key="ConfirmDeleteFlyout" x:Name="ConfirmDeleteFlyout" />

        <converter:BoolToVisiblityConverter x:Key="BoolToVisiblityConverter" />
    </Page.Resources>

    <Grid>
        <ScrollView Padding="36,0">
            <StackPanel Spacing="8">
                <Border Height="2" />

                <Border Style="{StaticResource CardBorderStyle}" Visibility="{x:Bind viewModel.IsListEmpty, Mode=OneWay, Converter={StaticResource BoolToVisiblityConverter}}">
                    <HyperlinkButton
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="{x:Bind viewModel.AddArgument}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Add" />
                            <TextBlock Text="附加一条参数" />
                        </StackPanel>
                    </HyperlinkButton>
                </Border>

                <ItemsControl ItemTemplate="{StaticResource ArgumentListItemDataTemplate}" ItemsSource="{x:Bind viewModel.Arguments, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="8">
                                <StackPanel.ChildrenTransitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </StackPanel.ChildrenTransitions>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollView>

        <ProgressBar
            x:Name="ListLoadingProgressBar"
            VerticalAlignment="Top"
            x:FieldModifier="private"
            IsIndeterminate="True"
            Visibility="Collapsed" />

        <my:FloatingActionButton
            Margin="36"
            Padding="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="{x:Bind viewModel.AddArgument}"
            Length="56"
            Style="{ThemeResource AccentButtonStyle}">
            <SymbolIcon Symbol="Add" />
        </my:FloatingActionButton>
    </Grid>
</Page>
